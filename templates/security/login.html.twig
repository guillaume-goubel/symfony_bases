{% extends 'base.html.twig' %}

{% block title %} {{parent()}} Login {% endblock %}

{% block body %}

<h1>Login</h1>

<form method="post" action="{{path('user_login')}}">

    <div class="form-group">
        <input placeholder="Votre mail..." type="text" required name="_username" type="text" class="form-control">
    </div>

    <div class="form-group">
        <input placeholder="Votre pass..." type="password" required name="_password" type="text" class="form-control">
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary">Submit</button>
    </div>

</form>

{% endblock %}