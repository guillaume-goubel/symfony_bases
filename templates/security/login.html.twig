{% extends 'base.html.twig' %}

{% block title %} {{parent()}} Login {% endblock %}

{% block body %}

<h1>Login</h1>

{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

<form method="post" action="{{path('user_login')}}">

    <div class="form-group">
        <input placeholder="Votre nom..." type="text" required name="_username" type="text" class="form-control" value="{{ last_username }}" >
    </div>

    <div class="form-group">
        <input placeholder="Votre pass..." type="password" required name="_password" type="text" class="form-control">
    </div>

    <input type="hidden" name="_target_path" value="events_list" />

    <div class="form-group">
        <button type="submit" class="btn btn-primary">Submit</button>
    </div>

</form>

{% endblock %}